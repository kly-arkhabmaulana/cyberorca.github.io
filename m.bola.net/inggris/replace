var articleLi = document.querySelectorAll('div.kl-artikel-bleft > div.kl-artikel-berita-img > ul.list-berita-kl > li'),
notEmpty = (articleLi.length > 0) ? 1 : 0;

if(notEmpty){
    var asCat = articleLi[0].querySelector('div.deskrip-berita > p.small > span.link-berita'),
    asTitle = articleLi[0].querySelector('div.deskrip-berita > p:first-child > a'),
    asImgSnippet = articleLi[0].querySelector('div.link-trigger > a.img-box-l > img');
    asCat.innerText = 'PROMOTED';
    asTitle.innerText = 'This title append by Revive Ads Server';
    asImgSnippet.src = 'https://via.placeholder.com/330x167?text=REVIVE+330x167';
}